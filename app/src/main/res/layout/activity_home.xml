<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2"
    tools:context=".LoginActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/era_2_0"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="120sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/agency_regular"
        android:layout_marginBottom="-20dp"
        />

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/acc_circle"
        android:layout_gravity="center"
        android:layout_marginBottom="-100dp"
        android:elevation="1dp"
        android:background="@drawable/acc_background"
        android:outlineSpotShadowColor="#00000000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:paddingBottom="30dp"
        >


        <TextView
            android:id="@+id/username_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="19sp"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/email_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_id"
            android:textSize="19sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_regular"
            />

        <TextView
            android:id="@+id/phone_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No."
            android:textSize="19sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/poppins_regular"
            />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sign Out"
        android:fontFamily="@font/agency_regular"
        android:textSize="20sp"
        android:background="@drawable/rectangle_grey"
        android:layout_marginTop="-15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="VERcETTI"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"/>


</LinearLayout>